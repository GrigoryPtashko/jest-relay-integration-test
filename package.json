{
  "private": true,
  "author": "Grigory Ptashko <grigory.ptashko@gamil.com>",
  "dependencies": {
    "babel-core": "^6.11.4",
    "babel-cli": "^6.11.4",
    "graphql": "^0.6.2",
    "graphql-relay": "^0.4.2",
    "react": "^15.2.1",
    "react-dom": "^15.2.1",
    "react-relay": "^0.9.2",
    "react-router": "2.6.0"
  },
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-fbjs": "^2.0.0",
    "babel-preset-jest": "^13.2.2",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-relay-plugin": "^0.9.2",
    "body-parser": "^1.15.2",
    "eslint": "^3.1.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-import": "^1.11.1",
    "eslint-plugin-jsx-a11y": "^2.0.1",
    "eslint-plugin-react": "^5.2.2",
    "isomorphic-style-loader": "^1.0.0",
    "jest-cli": "^13.2.3",
    "react-addons-test-utils": "^15.2.1",
    "sync-request": "^3.0.1"
  },
  "scripts": {
    "clean": "rm -rf ../resources/static"
  },
  "eslintConfig": {
    "env": {
      "jest": true
    },
    "parser": "babel-eslint",
    "plugins": [
      "react",
      "babel"
    ],
    "extends": [
      "airbnb/base",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "max-len": [
        2,
        120,
        2
      ],
      "generator-star-spacing": 0,
      "new-cap": 0,
      "array-bracket-spacing": 0,
      "object-shorthand": 0,
      "arrow-parens": 0,
      "no-await-in-loop": 0,
      "flow-object-type": 0,
      "babel/generator-star-spacing": 1,
      "babel/new-cap": 1,
      "babel/array-bracket-spacing": 1,
      "babel/object-shorthand": 1,
      "babel/arrow-parens": 1,
      "babel/no-await-in-loop": 1,
      "babel/flow-object-type": 1
    }
  },
  "jest": {
    "scriptPreprocessor": "jestPreprocessor.js",
    "moduleNameMapper": {
      "^.+\\.(scss)$": "<rootDir>/src/styleMock.js"
    }
  }
}
